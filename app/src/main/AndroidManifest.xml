        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".views.sign_in.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.car.BookCarActivity" />
        <activity android:name=".views.payment.PaymentActivity" />
        <activity
            android:name=".views.profile.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity android:name=".views.profile.EditProfileActivity" />
        <activity android:name=".views.history.HistoryDetailsActivity" />
        <activity android:name=".views.receipt.ReceiptActivity" />
        <activity android:name=".views.sign_in.RegisterActivity" />
        <activity android:name=".views.license.DriverLicenseActivity" />
